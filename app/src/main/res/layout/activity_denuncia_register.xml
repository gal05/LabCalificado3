<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:layout_margin="16dp">



<EditText
    android:id="@+id/titulo_input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:inputType="text"
    android:maxLines="1"
    android:maxLength="100"
    android:hint="Titulo"/>



<EditText
    android:id="@+id/descripcion_input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:inputType="textMultiLine"
    android:lines="3"
    android:hint="Descripcion"
    android:maxLength="500"/>


<TextView
    android:id="@+id/coordenadas_show"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:maxLength="100"
    android:textSize="20sp"
    android:hint="Coordenadas"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="16dp">

    <Button
        android:id="@+id/catchCoordenadas"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:drawableStart="@android:drawable/ic_menu_mylocation"
        android:text="Capturar unbicacion"
        android:onClick="takeGPS"/>
    <Button
        android:id="@+id/goMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/catchCoordenadas"
        android:drawableStart="@android:drawable/ic_dialog_map"
        android:text="En Mapa"
        android:onClick="takeGPS"/>
</RelativeLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <Button
        android:id="@+id/agregaFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:drawableStart="@android:drawable/ic_menu_camera"
        android:text="Agregar Foto"
        android:onClick="takePicture"/>

    <ImageView
        android:id="@+id/imagen_preview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/ic_launcher"/>

</RelativeLayout>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Registrar"
    style="@style/Widget.AppCompat.Button.Colored"
    android:onClick="callRegister"/>

</LinearLayout>
